{
    "compilerOptions": {
        "lib": ["esnext"],
        "noEmit": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
